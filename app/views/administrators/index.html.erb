<h1>Listing administrators</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Username</th>
    <th>Email</th>
    <th>Birthdate</th>
  </tr>

<% @administrators.each do |administrator| %>
  <tr>
    <td><%= administrator.user.name %></td>
    <td><%= administrator.user.username %></td>
    <td><%= administrator.user.email %></td>
    <td><%= administrator.user.birthdate %></td>
    <td><%= link_to 'Show', administrator %></td>
    <td><%= link_to 'Destroy', administrator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Administrator', new_administrator_path %>
